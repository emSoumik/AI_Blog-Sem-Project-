<div class="form-group">
    <label for="title" class="form-label">
        <i class="fas fa-heading"></i> Title
    </label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" 
           class="form-control" placeholder="Enter the title of your article">
</div>

<div class="form-group">
    <label for="description" class="form-label">
        <i class="fas fa-info-circle"></i> Description
    </label>
    <textarea name="description" id="description" class="form-control" 
              placeholder="Write a brief description of your article"><%= article.description %></textarea>
</div>

<div class="form-group">
    <label for="markdown" class="form-label">
        <i class="fas fa-pen-alt"></i> Content (Markdown)
    </label>
    <textarea required name="markdown" id="markdown" class="form-control" 
              placeholder="Write your article content using Markdown"><%= article.markdown %></textarea>
</div>

<div class="btn-container">
    <a href="/" class="btn btn-cancel">
        <i class="fas fa-times"></i> Cancel
    </a>
    <button type="button" class="btn btn-preview">
        <i class="fas fa-eye"></i> Preview
    </button>
    <button type="submit" class="btn btn-save">
        <i class="fas fa-save"></i> Save Article
    </button>
</div>
