<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <title>Blog</title>
    <style>
        .sidebar {
            height: 100vh;
            background-color: #212529;
            padding: 20px;
            position: fixed;
            left: 0;
            top: 0;
            width: 250px;
            color: #fff;
            box-shadow: 2px 0 5px rgba(0,0,0,0.2);
        }
        
        .sidebar .nav-link {
            color: #adb5bd;
            transition: color 0.3s ease;
        }
        
        .sidebar .nav-link:hover {
            color: #fff;
            background-color: #343a40;
            border-radius: 5px;
        }
        
        .sidebar .nav-link.active {
            color: #fff;
            background-color: #0d6efd;
            border-radius: 5px;
        }
        
        .sidebar hr {
            border-color: #495057;
            margin: 1rem 0;
        }
        
        .sidebar-heading {
            color: #6c757d;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.1em;
            margin-top: 1rem;
        }
        
        .sidebar-logo {
            padding: 1rem 0;
            border-bottom: 1px solid #495057;
            margin-bottom: 1rem;
        }
        
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }
        
        .hero-section {
            background: linear-gradient(to right, #6c757d, #495057);
            color: white;
            padding: 3rem 0;
            margin-bottom: 2rem;
        }
        
        .article-card {
            transition: transform 0.2s;
        }
        
        .article-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        
        .search-bar {
            margin-bottom: 2rem;
        }
        
        .footer {
            margin-top: 3rem;
            padding: 2rem 0;
            background-color: #f8f9fa;
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Updated Sidebar -->
    <div class="sidebar">
        <div class="sidebar-logo">
            <img src="/images/logo-white.png" alt="logo" class="img-fluid" style="max-height: 60px;">
        </div>
        <div class="nav flex-column">
            <a href="/" class="nav-link active mb-2">
                <i class="fas fa-home me-2"></i> Home
            </a>
            <a href="/articles" class="nav-link mb-2">
                <i class="fas fa-newspaper me-2"></i> Articles
            </a>
            <a href="/login" class="nav-link mb-2">
                <i class="fas fa-sign-in-alt me-2"></i> Login
            </a>
            
            <hr>
            
            <h6 class="sidebar-heading">Categories</h6>
            <a href="#" class="nav-link mb-2">
                <i class="fas fa-laptop-code me-2"></i> Technology
            </a>
            <a href="#" class="nav-link mb-2">
                <i class="fas fa-flask me-2"></i> Science
            </a>
            <a href="#" class="nav-link mb-2">
                <i class="fas fa-heart me-2"></i> Life
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Hero Section -->
        <div class="hero-section text-center">
            <h1>Welcome to ThoughtThread</h1>
            <p>Share your ideas with the world</p>
            <a href="/articles/new" class="btn btn-light btn-lg">Start Writing</a>
        </div>

        <!-- Search Bar -->
        <div class="search-bar">
            <input type="search" class="form-control" placeholder="Search articles...">
        </div>

        <!-- Articles Grid -->
        <div class="row">
            <% articles.forEach(article => { %>
                <div class="col-md-6 mb-4">
                    <div class="card article-card h-100">
                        <div class="card-body">
                            <h4 class="card-title"><%= article.title %></h4>
                            <div class="card-subtitle text-muted mb-2">
                                <%= article.createdAt.toLocaleDateString() %>
                            </div>
                            <div class="card-text mb-2">
                                <%= article.description %>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="articles/<%= article.slug %>" class="btn btn-primary">Read more</a>
                                <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h5>About</h5>
                        <p>A platform for sharing thoughts and ideas</p>
                    </div>
                    <div class="col-md-4">
                        <h5>Quick Links</h5>
                        <a href="#" class="d-block">Terms of Service</a>
                        <a href="#" class="d-block">Privacy Policy</a>
                    </div>
                    <div class="col-md-4">
                        <h5>Contact</h5>
                        <p>Email: contact@thoughtthread.com</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>